
@page "/cardetail/{CarId}"


<h1 class="page-title">Details for @Car.Name @Car.Model</h1>


<div class="col-12 row">
    <div class="col-2">
        <img src="@($"https://via.placeholder.com/150")" class="rounded-circle" />

    </div>
    <div class="col-10 row">
        <div class="col-xs-12 col-sm-8">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Car ID</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Car.CarId</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Model</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Car.Model</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Car Brand</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Car.Brand</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Year </label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Car.Year.ToShortDateString()</label>
                </div>
            </div>

          



            @*<div class="form-group row">
                <label class="col-sm-4 col-form-label">Phone number</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Car.Category.CategoryName</label>
                </div>
            </div>*@

          

         
        </div>
    </div>
</div>